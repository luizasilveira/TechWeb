				<td><%=cliente.getAdress()%></td>
				<td><%=cliente.getCelphone()%></td>
				<td><input type="button" value="Delete" onclick= 'SomeDeleteRowFunction()'></td>
				
			
			</tr>


			<%
			}
		%>
		</tbody>

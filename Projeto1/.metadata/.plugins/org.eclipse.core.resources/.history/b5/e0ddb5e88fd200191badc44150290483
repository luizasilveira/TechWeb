			DAO dao = new DAO();
			List<Clients> clientes = dao.getClientes();
			for (Clients cliente : clientes) {
		%>
		

		<tbody>
			<tr>
				
				<td><%=cliente.getId()%></td>
				<td><%=cliente.getName()%></td>
				<td><%=cliente.getBirth()%></td>
